<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.flores.nicolas.spheroedu">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SlaveActivity"
            android:label="@string/SLAVE_APP_NAME"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MasterActivity"
            android:label="@string/MASTER_APP_NAME"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MasterExercise"
            android:label="@string/MASTER_EXERCISE_APP_NAME"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SlaveExercise"
            android:label="@string/SLAVE_EXERCISE_APP_NAME"
            android:screenOrientation="portrait" />
    </application>

</manifest>
